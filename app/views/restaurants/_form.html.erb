<div class="container">
  <div class="row ">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"], prompt: 'select' %>
        <%= f.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>

